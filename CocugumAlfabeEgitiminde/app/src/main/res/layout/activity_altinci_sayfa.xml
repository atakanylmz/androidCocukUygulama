<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@mipmap/altinci_ekran"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    tools:context="com.atakanylmz1.cocugumalfabeegitiminde.altinci_sayfa"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/altinci_reklam"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <ImageButton
                android:id="@+id/homealti_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="sayfa_degis"
                android:layout_weight="4"
                android:background="@mipmap/home"/>

        </LinearLayout>
        <LinearLayout
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/bir_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="sescal"
                android:layout_weight="1"
                android:background="@mipmap/bir" />

            <ImageButton
                android:id="@+id/iki_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="sescal"
                android:layout_weight="1"
                android:background="@mipmap/iki" />

            <ImageButton
                android:id="@+id/uc_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="sescal"
                android:layout_weight="1"
                android:background="@mipmap/uc" />


        </LinearLayout>

        <LinearLayout
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/dort_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="sescal"
                android:layout_weight="1"
                android:background="@mipmap/dort" />

            <ImageButton
                android:id="@+id/bes_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="sescal"
                android:layout_weight="1"
                android:background="@mipmap/bes" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="25dp">

            <ImageButton
                android:id="@+id/altidanbese_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@mipmap/left"
                android:onClick="sayfa_degis" />

            <ImageButton
                android:id="@+id/altidanyediye_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@mipmap/right"
                android:onClick="sayfa_degis" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
