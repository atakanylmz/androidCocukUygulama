<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@mipmap/yedinci_ekran"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    tools:context="com.atakanylmz1.cocugumalfabeegitiminde.besinci_sayfa"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/yedinci_reklam"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <ImageButton
                android:id="@+id/homeyedi_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="sayfa_degis"
                android:layout_weight="4"
                android:background="@mipmap/home"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/alti_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="sescal"
                android:layout_weight="1"
                android:background="@mipmap/alti"/>

            <ImageButton
                android:id="@+id/yedi_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="sescal"
                android:layout_weight="1"
                android:background="@mipmap/yedi"/>

            <ImageButton
                android:id="@+id/sekiz_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="sescal"
                android:layout_weight="1"
                android:background="@mipmap/sekiz"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/dokuz_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="sescal"
                android:layout_weight="1"
                android:background="@mipmap/dokuz"/>

            <ImageButton
                android:id="@+id/on_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="sescal"
                android:layout_weight="1"
                android:background="@mipmap/on"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/yedidenaltiya_btn"
                android:onClick="sayfa_degis"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@mipmap/left"/>

            <ImageButton
                android:id="@+id/yedidenbire_btn"
                android:onClick="sayfa_degis"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@mipmap/right"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
