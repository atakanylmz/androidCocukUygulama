<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@mipmap/altinci_ekran"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    tools:context="com.atakanylmz1.cocugumalfabeegitiminde.sayilar"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/bir_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="kontrolEt"
                android:layout_weight="1"
                android:background="@mipmap/bir" />

            <ImageButton
                android:id="@+id/iki_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="kontrolEt"
                android:layout_weight="1"
                android:background="@mipmap/iki" />

            <ImageButton
                android:id="@+id/uc_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="kontrolEt"
                android:layout_weight="1"
                android:background="@mipmap/uc" />


        </LinearLayout>

        <LinearLayout
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/dort_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="kontrolEt"
                android:layout_weight="1"
                android:background="@mipmap/dort" />

            <ImageButton
                android:id="@+id/bes_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="kontrolEt"
                android:layout_weight="1"
                android:background="@mipmap/bes" />
        </LinearLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/alti_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="kontrolEt"
                android:layout_weight="1"
                android:background="@mipmap/alti"/>

            <ImageButton
                android:id="@+id/yedi_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="kontrolEt"
                android:layout_weight="1"
                android:background="@mipmap/yedi"/>

            <ImageButton
                android:id="@+id/sekiz_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="kontrolEt"
                android:layout_weight="1"
                android:background="@mipmap/sekiz"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/dokuz_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="kontrolEt"
                android:layout_weight="1"
                android:background="@mipmap/dokuz"/>

            <ImageButton
                android:id="@+id/on_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="kontrolEt"
                android:layout_weight="1"
                android:background="@mipmap/on"/>
            <ImageButton
                android:id="@+id/homesayilar_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="sayfa_degis"
                android:layout_weight="1"
                android:background="@mipmap/home"/>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
