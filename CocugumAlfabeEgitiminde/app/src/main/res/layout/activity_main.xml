<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_ekran"
    tools:context="com.atakanylmz1.cocugumalfabeegitiminde.MainActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/calis_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:shadowColor="#8C0000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="7"
            android:text="ÇALIŞMAYA BAŞLA"
            android:textColor="#FCFFF2"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/harf_bul_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:shadowColor="#8C0000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="7"
            android:text="HARF BUL"
            android:textColor="#FCFFF2"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="274dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/calis_btn"
            android:layout_alignStart="@+id/calis_btn"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/sayi_bul_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:shadowColor="#8C0000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="7"
            android:text="SAYI BUL"
            android:textColor="#FCFFF2"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="274dp"
            android:layout_above="@+id/calis_btn"
            android:layout_alignLeft="@+id/calis_btn"
            android:layout_alignStart="@+id/calis_btn"
            android:layout_marginBottom="30dp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
